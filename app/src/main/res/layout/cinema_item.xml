<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cinemaItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:selectableItemBackgroundBorderless"
    android:paddingStart="18dp"
    android:paddingEnd="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:focusable="true">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cinemaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:ellipsize="marquee"
            android:textColor="@android:color/black"
            android:singleLine="true" />
        <TextView
            android:id="@+id/cinemaAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold_italic"
            android:textSize="13sp"
            android:textColor="@color/grey"
            />
        <TextView
            android:id="@+id/cinemaStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/cinemaDistance"
        android:visibility="gone"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textSize="15sp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/arrow"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right_red"
        android:contentDescription="@string/sala" />
</LinearLayout>