<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/showingsToolbarLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/showingsToolbarCollapsing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:expandedTitleMarginTop="15dp"
        app:expandedTitleMarginStart="15dp"
        app:collapsedTitleTextAppearance="@style/CollapsingToolbarLayoutCollapsedTextStyle"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:expandedTitleGravity="top|left"
        app:title="@string/showings">

        <android.support.v7.widget.Toolbar
            android:id="@+id/showingsToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleMarginStart="0dp"
            app:titleMarginTop="5dp"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways">
            <Button
                android:id="@+id/filterShowingsButton"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="end"
                android:background="@drawable/showings_button_bg_red"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_white_24dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.CollapsingToolbarLayout>
</android.support.design.widget.AppBarLayout>