<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/darkGrey</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/darkGrey</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle2" parent="AppTheme">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="CollapsingToolbarLayoutCollapsedTextStyle" parent="AppTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">none</item>
    </style>
    <style name="AboutToolbarText" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:ellipsize">none</item>
    </style>
    <style name="CollapsingToolbarLayoutCollapsedTextStyleMovieInfo" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_sans_black</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>

